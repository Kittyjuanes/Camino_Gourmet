<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="197dp"
        android:layout_alignParentTop="true"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_marginTop="0dp"
        android:text="Â¿Que quieres comer hoy?"
        android:textSize="45sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:gravity="center"
        android:text="Selecciona una opcion para visualisar los restauantes que quieres visitar" />

    <ImageView
        android:id="@+id/Hamburger"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:padding="10dp"
        app:srcCompat="@drawable/hamburegesa" />

    <ImageView
        android:id="@+id/Sushi"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@id/textView5"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/Hamburger"
        android:padding="10dp"
        app:srcCompat="@drawable/sushi" />

    <ImageView
        android:id="@+id/Pizza"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@id/textView5"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@id/Sushi"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        app:srcCompat="@drawable/pizza" />

</RelativeLayout>