<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi Restaurante"
        android:textAlignment="center"
        android:textColor="@color/textoPrincipal"
        android:textStyle="bold"
        android:textSize="40sp"
        android:padding="8dp"

        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desde aquí podrás modificar la visibilidad de tu restaurante"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/textoGris"
        android:padding="8dp"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_image_slight"
        tools:srcCompat="@tools:sample/avatars"
        android:padding="15dp"
        android:src="@drawable/restaurant"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restaurante"
        android:textStyle="bold"
        android:textColor="@color/textoPrincipal"
        android:textSize="25dp"
        android:padding="5dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Abierto"
            android:textSize="18sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/verde"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>
    <View
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"

        android:background="#BDBDBD"
        android:layout_below="@id/textGeneral"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:background="@drawable/rounded_corners_orange"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_marginEnd="7dp"
                android:layout_height="wrap_content"
                android:src="@drawable/staricon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textColor="#fff"
                android:textSize="20sp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_marginEnd="10dp"
                android:layout_height="30dp"
                android:src="@drawable/locationicon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direccion"
                android:textSize="23sp"
                android:textColor="@color/textoGris"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>