<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/hamburegesa" />


    <TextView
        android:id="@+id/Restaurante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/logo"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/logo"
        android:gravity="center_horizontal"
        android:text="Restaurante" />


    <LinearLayout
        android:id="@+id/Resultado"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_toEndOf="@+id/Restaurante"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_corners_orange"
        android:backgroundTint="@color/Normal"
        >
        <ImageView
            android:layout_width="10dp"
            android:layout_marginEnd="5dp"
            android:layout_height="wrap_content"
            android:src="@drawable/staricon"
            />

        <TextView
            android:id="@+id/Calificacion"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:text="4.5"
            android:textColor="#fff"
            android:textSize="10dp"

            />
    </LinearLayout>

    <Button
        android:id="@+id/Añadir"
        android:layout_width="74dp"
        android:layout_height="29dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/Resultado"
        android:layout_marginStart="5dp"
        android:text="Añadir"
        android:textSize="8sp"
        android:backgroundTint="@color/Normal"/>

    <Button
        android:id="@+id/Perfil"
        android:layout_width="74dp"
        android:layout_height="29dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/Añadir"
        android:text="Perfil"
        android:textSize="8sp"
        android:backgroundTint="@color/Normal"/>


</RelativeLayout>